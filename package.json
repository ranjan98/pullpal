{
  "name": "pullpal",
  "version": "1.0.0",
  "description": "Automated pull request tracking and reminder system that integrates with GitHub and Slack to improve team review times",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "github",
    "pull-request",
    "slack",
    "automation",
    "code-review",
    "team-productivity"
  ],
  "author": "ranjan98",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@slack/web-api": "^6.11.2",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/autocannon": "^7.12.7",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/node-cron": "^3.0.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
